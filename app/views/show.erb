<a href="/robots">Robot Index</a>

<h1><%= @robot.name %></h1>

<p>City:  <%= @robot.city %></p>
<p>State:  <%= @robot.state %></p>
<p>Avatar:  <%= @robot.avatar %></p>
<p>Birthdate:  <%= @robot.birthdate %></p>
<p>Date Hired:  <%= @robot.date_hired %></p>
<p>Department:  <%= @robot.department %></p>

<form action="/robots/<%= @robot.id %>" method="POST">
  <input type="hidden" name="_method" value="DELETE" />
  <input type="submit" value="Delete" />
</form>

