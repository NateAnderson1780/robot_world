<form action="/robots" method="post">
  <p>Let's make a new robot:</p>
  <label for="name">Name: </label>
  <input type='text' name='robot[name]' id="name"/><br/>
  <label for="city">City: </label>
  <textarea name='robot[city]' id="city"></textarea><br/>
  <label for="state">State: </label>
  <textarea name='robot[state]' id="state"></textarea><br/>
  <label for="avatar">Avatar: </label>
  <textarea name='robot[avatar]' id="avatar"></textarea><br/>
  <label for="birthdate">Birthdate: </label>
  <textarea name='robot[birthdate]' id="birthdate"></textarea><br/>
  <label for="date_hired">Date Hired: </label>
  <textarea name='robot[date_hired]' id="date_hired"></textarea><br/>
  <label for="department">Department: </label>
  <textarea name='robot[department]' id="department"></textarea><br/>
  <input type='submit' value="submit"/>
</form>

